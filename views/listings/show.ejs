<% layout("/layouts/boilerplate") %>

<link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;600&display=swap" rel="stylesheet">

<div class="container py-5 mb-4" style="font-family: 'Plus Jakarta Sans', sans-serif;">
  <div class="row justify-content-center">
    <div class="col-md-10 col-lg-8">

      <!-- Image Section -->
      <div class="image-box text-center mb-4">
        <% if (listing.image) { %>
          <img src="<%= listing.image %>" alt="Listing Image" class="img-fluid rounded shadow-sm"
            onerror="this.style.display='none'; this.parentElement.innerHTML='<div class=\'fallback-text\'><span>ðŸ“¦</span><br>No image available</div>';">
        <% } else { %>
          <div class="fallback-text text-muted text-center py-4 border rounded">ðŸ“¦<br>No image available</div>
        <% } %>
      </div>

      <!-- Listing Details -->
      <h2 class="fw-semibold text-left"><%= listing.title %></h2>
      <p class="text-muted text-left mb-2"><%= listing.location %></p>
      </i>
      <p class="text-left"><%= listing.description %></p>

      <ul class="list-group list-group-flush mb-3">
        <li class="list-group-item"><strong>Business Name:</strong> <%= listing.name %></li>
        <li class="list-group-item"><strong>Opening Hours:</strong> <%= listing.openHours %></li>
        <li class="list-group-item"><strong>Contact:</strong> <%= listing.contact %></li>
        <% if (listing.tags && listing.tags.length > 0) { %>
          <li class="list-group-item">
            <strong>Tags:</strong>
            <% listing.tags.forEach(tag => { %>
              <span class="badge bg-light text-dark border me-1"><%= tag %></span>
            <% }) %>
          </li>
        <% } %>
      </ul>

      <!-- Actions -->
<% if (currentUser && listing.owner && currentUser._id.toString() === listing.owner.toString()) { %>
  <a href="/listings/<%= listing._id %>/edit" class="btn btn-outline-primary">Edit</a>
  <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST" style="display:inline;">
    <button class="btn btn-outline-danger">Delete</button>
  </form>
<% } %>
u
<% if(currentUser)  { %>
      <!-- Review Form -->
      <h4 class="text-left mb-3 mt-3"> Leave a Review</h4>
      <form action="/listings/<%= listing._id %>/reviews" method="POST" class="needs-validation">
        <div class="mb-3">
          <label for="rating">Rating</label>
          <input type="range" class="form-range" name="review[rating]" min="1" max="5" required>
        </div>
        <div class="mb-3">
          <label for="comment">Comment</label>
          <textarea class="form-control" name="review[comment]" rows="3" required></textarea>
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please enter a comment.</div>
        </div>
        <button class="btn btn-success mt-2 ">Submit Review</button>
      </form>
      <% } %>
<hr>
      <!-- Reviews Section -->
       <P><B>All Reviews</B></P>
       <% for (let review of listing.reviews) { %>
        <div class="card mb-3">
          <div class="card-body">
            <h5 class="card-title"><%= @review.author.username%></h5>
            <p class="card-text"><%= review.comment %></p>
            <p class="card-text"><%= review.rating %> â˜…</p>
          </div>
        </div>
      <% } %>
      <h4 class="text-left mt-5 mb-3">Reviews</h4>

    </div>
  </div>
</div>
