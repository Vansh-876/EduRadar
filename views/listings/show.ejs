<% layout("/layouts/boilerplate") %>

<link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;600&display=swap" rel="stylesheet">

<div class="container py-5" style="font-family: 'Plus Jakarta Sans', sans-serif;">

  <div class="row g-4">
   <!-- Left: Image with fallback -->
<div class="col-md-6">
  <div class="image-box">
    <img src="<%= listing.image %>" alt="Listing Image"
      onerror="this.style.display='none'; this.parentElement.innerHTML='<div class=\'fallback-text\'><span>üì¶</span><br>No image available</div>';">
  </div>
</div>



    <!-- Right: Details -->
    <div class="col-md-6">
      <h2 class="fw-semibold"><%= listing.title %></h2>
      <p class="text-muted mb-2" style="font-size: 15px;"><%= listing.location %></p>
      <p class="mb-3" style="font-size: 16px;"><%= listing.description %></p>

      <div class="mb-3">
        <span class="badge bg-primary me-2">‚≠ê <%= listing.rating %> Rating</span>
        <span class="badge bg-success me-2"><%= listing.category.toUpperCase() %></span>
        <% if (listing.verified) { %>
          <span class="badge bg-info text-dark">‚úî Verified</span>
        <% } %>
      </div>

      <ul class="list-group list-group-flush mb-3" style="font-size: 14px;">
        <li class="list-group-item"><strong>Business Name:</strong> <%= listing.name %></li>
        <li class="list-group-item"><strong>Opening Hours:</strong> <%= listing.openHours %></li>
        <li class="list-group-item"><strong>Contact:</strong> <%= listing.contact %></li>
        <% if (listing.tags && listing.tags.length > 0) { %>
          <li class="list-group-item">
            <strong>Tags:</strong>
            <% listing.tags.forEach(tag => { %>
              <span class="badge bg-light text-dark border me-1"><%= tag %></span>
            <% }) %>
          </li>
        <% } %>
      </ul>

      <div class="d-flex gap-2">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-outline-primary">Edit</a>
        <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST">
          <button type="submit" class="btn btn-outline-danger">Delete</button>
        </form>
      </div>
    </div>
  </div>
</div>
