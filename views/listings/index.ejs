<% layout("/layouts/boilerplate") %>
<body>
<div class="container mt-5">
  <h2 class="mb-4" style="font-family: 'Plus Jakarta Sans', sans-serif;">All Listings</h2>

  <!-- ✅ Responsive grid row outside the loop -->
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-2 row-cols-lg-4 g-30">
    <% allListings.forEach(listing => { %>
      <div class="col"> <!-- ✅ Only one column inside loop -->
        <div class="card shadow-sm border-0 h-100" style="border-radius: 16px; font-family: 'Plus Jakarta Sans', sans-serif; overflow: hidden;">
          
          <!-- Image with fallback -->
          <div style="height: 240px; background-color: #f0f0f0; display: flex; align-items: center; justify-content: center; border-bottom: 1px solid #ddd;">
            <img src="<%= listing.image %>" alt="Listing Image" style="width: 100%; height: 100%; object-fit: cover;"
              onerror="this.style.display='none'; this.parentElement.innerHTML='<span style=\'color: #888;\'>Image not available</span>';">
          </div>

          <div class="card-body py-3 px-3">
            <h6 class="fw-semibold mb-1"><%= listing.name %></h6>
            <p class="text-muted mb-1" style="font-size: 13px;"><%= listing.location %></p>
            <p class="mb-2" style="font-size: 13px;"><%= listing.description %></p>

            <div class="d-flex justify-content-between align-items-center">
              <span class="badge bg-success"><%= listing.rating %> ★</span>
              <a href="/listings/<%= listing._id %>" class="btn btn-sm btn-outline-primary">View Details</a>
            </div>
          </div>

        </div>
      </div>
    <% }) %>
  </div>
</div>
</body>
