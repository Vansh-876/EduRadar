<div class="flash-container position-fixed top-2 start-50 translate-middle-x mt-5 z-3" style="min-width: 350px; pointer-events: none;">
  <% if (success && success.length > 0) { %>
    <div class="alert alert-success alert-dismissible fade show shadow border-0" role="alert"
         style="backdrop-filter: blur(8px); background: rgba(40, 167, 69, 0.25); color: #155724; pointer-events: auto;">
      <strong>✅ Success:</strong> <%= success %>
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  <% } %>
  <% if (error && error.length > 0) { %>
    <div class="alert alert-danger alert-dismissible fade show shadow border-0" role="alert"
         style="backdrop-filter: blur(8px); background: rgba(220, 53, 69, 0.25); color: #721c24; pointer-events: auto;">
      <strong>⚠️ Error:</strong> <%= error %>
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  <% } %>
</div>

<script>
  setTimeout(() => {
    const alerts = document.querySelectorAll('.alert, .toast');
    alerts.forEach(alert => {
      alert.classList.remove('show');
      alert.classList.add('fade');
      setTimeout(() => alert.remove(), 5000); // Clean DOM
    });
  }, 3000); // auto dismiss after 3s
</script>
